extends header

block corpus
	hr
	form.form-group(method="POST", action="saveAnswers")
		-if(example != null)
			.alert.alert-info
				.row.padded
					.col-lg-12
						label 
							b Example) 
							| !{example.question}
				.row.padded
					.col-lg-4
						.radio
						label(for='answer-Example-yes')
							input(type='radio', name='#{example._id}', id='answer-Example-yes', value="1", checked="checked", required)
							| Yes
						span &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						label(for='answer-Example-no')
							input(type='radio', name='#{example._id}', id='answer-Example-no', value="0", disabled, required)
							| No
						br
		-for(var index = 0; index < questions.length; index++)
			.row.padded
				.col-lg-12
					.panel.panel-default
						.panel-body
							label 
								b #{index+1}) 
								| !{questions[index].question}
						.panel-footer
							.radio
							label(for='answer-#{index}yes')
								input(type='radio', name='#{questions[index]._id}', id='answer-#{index}yes', value="1", required)
								| Yes
							span &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
							label(for='answer-#{index}no')
								input(type='radio', name='#{questions[index]._id}', id='answer-#{index}no', value="0", required)
								| No
		.panel.panel-default
			.panel-body
				.row
				.col-lg-2
					input.btn.btn-primary.form-control(type="Submit", value="Submit", id="submit")
				.col-lg-2
					input.btn.btn-default.form-control(type="Reset", value="Reset", id="reset")